<div class="container">
    <div class="text-center m-5">
      <h2>詳細画面</h2>
    </div>
    <div class="row">
      <div class="col-lg-6 col-xl-6 col-xs-12 ">
        <table class="table">

            <p><%= attachment_image_tag @menu, :image,:fill, 500, 400 %></p>

        </table>
      </div>
      <div class="col-lg-5 col-xl-5 col-xs-12 ">
        <table  class="table text-center" >
              <tr>
                <th>投稿者</th>
              </tr>
              <tr>
                <td>
                  <%= link_to user_path(@menu.user) do %>
                    <%= attachment_image_tag @menu.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'50x50'%>
                    <%= @menu.user.name %>
                  <% end %>
                </td>
              </tr>

              <tr>
                <th>題名</th>
              </tr>
              <tr>
                <td><%= @menu.title %></td>
              </tr>
              <tr>
                <th>本文</th>
              </tr>
              <tr>
                <td><%= @menu.body %></td>
              </tr>
        </table>
        <table  class="table text-center" >
          <tr>
            <th>
              <div class="m-3">
                <p id='lik<%= @menu.id %>'>
                  <%= render "likes/like", menu: @menu %>
                </p>
              </div>
            </th>
          </tr>
          <% if @menu.user == current_user %>
          <tr>
            <th>
              <%= link_to "編集する",edit_menu_path(@menu),class: "btn btn-warning mr-5 w-50" %>
              <%= link_to "削除する",menu_path(@menu),method: :delete,class:'btn btn-outline-danger' %>
            </th>
          </tr>
          <% else %>
          <% end %>

        </table>
      </div>
    </div>
    </div>
    <div class="container">
     <div class="row">
    <div class="col-lg-5 col-xl-6 col-xs-12">
            <%= @menu.spot.address %>
            <div class="show__maps" id="show_map" style="height: 320px; width: 400px;"></div>
          </div>

    <div class="col-lg-5 col-xl-5 col-xs-12 ">
    <div class="m-3">
      <div class="m-3">

          <%= render partial: "comment", collection: @comments %>

      </div>
        <div class="m-4">
          <%= form_with(model:[@menu, @comment], remote: true) do |f| %>
            <%= f.text_area :comm, rows:'5',placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
          <% end %>
        </div>
      </div>
      </div>
</div>
</div>