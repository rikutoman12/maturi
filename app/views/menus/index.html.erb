<div class=container>
  <div class="row">
    <% @menus.each do |menu| %>
    <div class ="m-2">
      <%= link_to menu_path(menu) do %>
      <%= attachment_image_tag menu, :image,:fill, 350, 300,fallback: "no_image.jpg",size:'350x300' %>
      <div class="text-center">
      <p><%= menu.title %></p>
      </div>
      <% end %>
      コメント：<%= menu.comments.count %>
      お気に入り:<%= menu.likes.count %>
    </div>
    <% end %>
  </div>
</div>