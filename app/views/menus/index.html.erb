    <div class="text-center m-5">
      <h2>一覧画面</h2>
    </div>
      <div class=container>
        <div class="row">
          <% @menus.each do |menu| %>
            <div class ="m-2">
              <div class="table-bordered" >
                <% if user_signed_in? %>
                  <%= link_to menu_path(menu) do %>

                    <%= attachment_image_tag menu, :image, class: 'indexImage' %>


                    <div class="text-center">
                      <p><%= menu.title %></p>
                  <% end %>
                <% else %>
                  <%= link_to a_menu_path(menu) do %>
                    <%= attachment_image_tag menu, :image,:fill, 360, 310, class: 'indexImage' %>
                      <div class="text-center">
                        <p><%= menu.title %></p>
                  <% end %>
                <% end %>
                    コメント数：<%= menu.comments.count %>
                    いいね数:<%= menu.likes.count %>
                  </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>