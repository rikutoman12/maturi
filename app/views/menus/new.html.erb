<div class="text-center m-5">
  <h2>投稿画面</h2>
    <%= render 'layouts/error', menu: @menu %>
      <div class="m-5">
        <h4>写真を選択</h4>
        <%= form_with(model: @menu, local: true) do |f| %>
          <p><%= f.attachment_field :image %></p>
          <h4>題名</h4>
          <p><%= f.text_field :title,placeholder: "題名を入力(20文字以内)",class:'edita m-3' %></p>
          <h4>本文</h4>
          <p><%= f.text_area :body,placeholder: "本文を入力(300文字以内)",class:'edit m-3'%></p>
          <h4>場所</h4>
          <%= f.fields_for :spot do |s| %>
            <%= s.label :address, "場所(Google Mapで検索)", class: 'spot__title' %>
            <%= s.text_field :address, placeholder: "場所を入力", id: "address", class: 'spot__text' %>
          <% end %>
          <div class="m-5">
            <input type="button" class="btn btn-warning" value="検索" onclick="codeAddress()">
          </div>
          <div class="map" id="map" style="height: 400px; width: 100%;"></div>
          <div class="m-5">
            <p><%= f.submit '投稿する',class: 'btn  btn-block btn-warning' %></p>
          </div>
        <% end %>
      </div>
</div>