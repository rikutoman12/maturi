<div class="text-center m-5">
  <h2>投稿画面</h2>
    <%= render 'layouts/error', menu: @menu %>
      <div class=" table-bordered m-5">
        <%= form_with(model: @menu, local: true) do |f| %>
          <p><%= f.attachment_field :image %></p>
          <h4>題名</h4>
          <p><%= f.text_field :title, size:"100x10",placeholder: "題名を入力" %></p>
          <h4>本文</h4>
          <p><%= f.text_area :body, size:"100x10",placeholder: "本文を入力" %></p>
          <h4>spot</h4>
          <%= f.fields_for :spot do |s| %>
            <%= s.label :address, "レビュー場所(Google Mapで検索)", class: 'spot__title' %>
            <%= s.text_field :address, placeholder: "スポットを入力", id: "address", class: 'spot__text' %>
          <% end %>
          <input type="button" class="btn btn-warning" value="検索する" onclick="codeAddress()">
          <div class="map" id="map" style="height: 320px; width: 1230px;"></div>
          <p><%= f.submit '投稿する',class: 'btn  btn-block btn-warning' %></p>
        <% end %>
      </div>
</div>