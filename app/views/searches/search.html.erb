<%if @model == 'user' %>
  <div class="text-center m-5">
    <% if @records.exists? %>
    <h2>【ユーザーの検索結果】検索ワード：<%= @content %></h2>
  </div>
    <div class="container">
  <div class="text-center m-5">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th>フォロー</th>
          <th>フォロワー</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @records.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'50x50'%></td>
          <td><%= user.name %></td>
          <td><%= user.followings.count %></td>
          <td> <%= user.followers.count %></td>
          <td><%= link_to '詳細画面', user_path(user),class:'btn btn-outline-info' %></td>
        </tr>
        <% end %>
      </tbody>
      <% else %>
        <h2>【ユーザーの検索結果】ユーザーはいません</h2>
      <% end %>
    </table>
  </di>
</div>


<% else @model == 'menu' %>
  <div class="text-center m-5">
    <% if @records.exists? %>
    <h2>【投稿の検索結果】検索ワード：<%= @content %></h2>
  </div>
  <div class=container>
    <div class="row">
      <% @records.each do |menu| %>
        <div class ="table-bordered m-2">
          <%= link_to menu_path(menu) do %>
            <%= attachment_image_tag menu, :image, class: 'indexImage' %>
            <div class="text-center">
              <p><%= menu.title %></p>
            </div>
          <% end %>
        </div>
      <% end %>
      <% else %>
        <h2>【投稿の検索結果】投稿がありません</h2>
      <% end %>
    </div>
  </div>
<% end %>