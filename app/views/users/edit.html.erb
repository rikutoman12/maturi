<div class="text-center m-5">
  <%= render 'layouts/error', menu: @user %>
    <div class=" table-bordered m-5">
      <%= form_with model: @user, local:true do |f| %>
        <h4>プロフィール画像</h4>
        <p><%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg",size:'200x200' %></p>
        <p><%= f.attachment_field :profile_image %></p>
        <h4>名前</h4>
        <p><%= f.text_field :name,placeholder: "名前を入力" %></p>
        <h4>紹介文</h4>
        <p><%= f.text_area :introduction, size:"100x10",placeholder: "紹介文を入力" %></p>
        <p><%= f.submit '変更する',class: 'btn btn-block btn-warning' %></p>
      <% end %>
    </div>
</div>