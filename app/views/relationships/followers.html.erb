<div class="container">
  <div class="text-center m-5">
    <h2>フォロワー</h2>
    <table class='table table-hover table-inverse'>
      <% if @users.exists? %>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th>フォロー</th>
          <th>フォロワー</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'50x50'%></td>
          <td><%= user.name %></td>
          <td><%= user.followings.count %></td>
          <td> <%= user.followers.count %></td>
          <td><%= link_to '詳細画面', user_path(user),class:'btn btn-outline-info' %></td>
        </tr>
        <% end %>
      </tbody>
      <% else %>
      <p>ユーザーはいません</p>
      <% end %>
    </table>
  </di>
</div>