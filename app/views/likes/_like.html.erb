<% if menu.liked_by?(current_user) %>
          <%= link_to menu_like_path(menu_id: menu, id: 0), method: :delete, remote: true do %>
            ♥<%= menu.likes.count %> いいね!
          <% end %>
<% else %>
          <%= link_to menu_likes_path(menu), method: :post, remote: true do %>
            ♡<%= menu.likes.count %> いいね
          <% end %>
<% end %>