<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>日本の祭り</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="container">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li>
                <%= form_with url: search_path, method: :get, local: true do |f| %>
                  <%= text_field_tag 'content' %>
                  <%= select_tag 'model', options_for_select({ "ユーザー" => "user", "投稿" => "menu" }) %>
                  <%= submit_tag '検索' %>
                <% end %>
            </li>
            <li><%= link_to ' 一覧画面',menus_path ,class: 'fas fa-book-open nav-link text-light ml-5'%></li>
            <li><%= link_to '投稿画面',new_menu_path,class:'fas fa-users nav-link text-light' %></li>
            <li><%= link_to 'マイページ',user_path(current_user.id),class: 'fas fa-users nav-link text-light' %></li>
            <li><%= link_to ' logout', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %></li>
             </ul>
        </div>
      </div>
    </div>
  </nav>
        <% else %>
         <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li><%= link_to ' Home',root_path,class: 'fas fa-home nav-link text-light' %></li>
          <li><%#= link_to ' About',home_about_path,class: 'fas fa-link nav-link text-light' %></li>
          <li><%= link_to ' 新規登録', new_user_registration_path,class: 'fas fa-user-plus nav-link text-light' %></li>
          <li><%= link_to ' ログイン', new_user_session_path ,class: 'fas fa-sign-in-alt nav-link text-light'%></li>

        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>