<header class="shadow-sm">
  <div class="text-center">
    <h1><%= link_to '日本の祭り',root_path, class: "text-decoration-none text-dark" %></h1>
  </div>
  <nav class="navbar navbar-expand-xl navbar-light">
    <div class="container">
      <% if user_signed_in? %>
        <p>『<%= @usera.name %>』さんようこそ</p>
      <% else %>
        ログインまたは新規登録をして下さい
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expand="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <li>
          <div class="m-2">
            <%= form_with url: search_path, method: :get, local: true do |f| %>
              <%= f.text_field 'content', placeholder: "検索内容を入力" %>
              <%= f.select 'model', options_for_select({ "ユーザー" => "user", "投稿" => "menu" }) %>
              <%= f.submit '検索',class: 'btn btn-warning py-1' %>
            <% end %>
          </div>
        </li>
        <li class="nav-item m-2">
          <%= link_to '  一覧画面',menus_path, class: 'btn btn-outline-dark fas fa-list py-2' %>
        </li>
        <li class="nav-item m-2">
          <%= link_to  '  投稿画面',new_menu_path, class: 'btn btn-outline-dark fas fa-pen-nib py-2' %>
        </li>
        <li class="nav-item m-2 ">
          <%= link_to '  マイページ',user_path(current_user.id), class: 'btn btn-outline-dark fas fa-user py-2' %>
        </li>
        <li class="nav-item m-2">
          <%= link_to '  ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-danger fas fa-sign-out-alt py-2' %>
        </li>
        <% else %>
        <li class="nav-item m-2">
          <%= link_to '  top画面',root_path,class: 'btn btn-outline-dark fas fa-desktop py-2' %>
        </li>
        <li class="nav-item m-2">
          <%= link_to '  一覧画面',menus_path,class: 'btn btn-outline-dark fas fa-list py-2' %>
        </li>
        <li class="nav-item m-2">
          <%= link_to "  新規登録", new_user_registration_path, class: 'btn btn-outline-info fas fa-user-plus py-2' %>
        </li>
        <li class="nav-item m-2">
          <%= link_to "  ログイン", new_user_session_path, class: 'btn btn-outline-info fas fa-sign-in-alt py-2' %>
        </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

